<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.org/dtd/hibernate-mapping-2.0.dtd">  
  
 <hibernate-mapping>  
  <class name="com.javatechnology.jdbc.model.Employee" table="Hibernate_Employee">  
    <id name="id" column="EMPLOYEE_ID">  
     <generator class="increment"></generator>  
    </id>  
            
    <property name="employeeName" column="EMPLOYEE_NAME" type="string"></property>  
    <property name="employeeAddress" column="EMPLOYEE_ADDRESS" type="string"></property>  
  </class>  
            
 </hibernate-mapping>